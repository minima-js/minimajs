{
  "name": "minimajs",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "type": "module",
  "homepage": "https://minima-js.github.io",
  "repository": {
    "type": "github",
    "url": "git@github.com:minima-js/minima-js.github.io"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel --continue",
    "build": "turbo run build --filter=!@minimajs/docs",
    "test": "turbo run test",
    "coverage": "turbo run coverage",
    "clean": "turbo run clean",
    "release": "yarn build && changeset publish",
    "docs": "vitepress dev",
    "docs:build": "vitepress build",
    "docs:api": "typedoc"
  },
  "packageManager": "yarn@4.12.0",
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "jest": "^30.2.0",
    "rimraf": "^6.1.2",
    "turbo": "^2.6.3",
    "typedoc": "^0.28.15",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4",
    "vue": "^3.5.26"
  }
}