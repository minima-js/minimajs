{
  "name": "minimajs",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.5",
  "homepage": "https://minima-js.github.io",
  "repository": {
    "type": "github",
    "url": "git@github.com:minima-js/minima-js.github.io"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "test": "bun run --filter '*' test",
    "coverage": "bun run --filter '*' coverage",
    "clean": "bun run --filter '*' clean",
    "release": "bun run build && changeset publish",
    "docs": "vitepress dev",
    "docs:build": "vitepress build",
    "docs:api": "typedoc"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "jest": "^30.2.0",
    "rimraf": "^6.1.2",
    "typedoc": "^0.28.15",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4",
    "vue": "^3.5.26"
  }
}
