{
  "name": "@minimajs/server",
  "version": "0.4.0",
  "description": "High-performance HTTP framework built for node/bun with context-aware request handling and zero boilerplate",
  "type": "module",
  "license": "MIT",
  "homepage": "https://minima-js.github.io/",
  "repository": {
    "type": "github",
    "directory": "packages/server",
    "url": "https://github.com/minima-js/minimajs"
  },
  "exports": {
    ".": "./lib/index.js",
    "./bun": "./lib/bun/index.js",
    "./node": "./lib/node/index.js",
    "./plugins": "./lib/plugins/index.js",
    "./error": "./lib/error.js",
    "./utils": "./lib/utils/index.js",
    "./logger": "./lib/logger.js",
    "./mock": "./lib/mock/index.js"
  },
  "scripts": {
    "dev": "tsc -w",
    "build": "bun run clean && tsc -p ./tsconfig.build.json",
    "test": "bun test --timeout=2000 '**/*.test.ts'",
    "test:jest": "node --no-warnings --experimental-vm-modules node_modules/.bin/jest --detectOpenHandles",
    "coverage": "bun test --coverage --timeout=2000 '**/*.test.ts'",
    "clean": "rimraf -g '*.tsbuildinfo' lib"
  },
  "dependencies": {
    "avvio": "9",
    "deepmerge": "^4.3.1",
    "find-my-way": "9",
    "http-status-codes": "^2.3.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3"
  },
  "peerDependencies": {
    "chalk": "^5.6.2",
    "http-terminator": "^3.2.0"
  },
  "peerDependenciesMeta": {
    "chalk": {
      "optional": true
    },
    "http-terminator": {
      "optional": true
    }
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/bun": "^1.3.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "http-terminator": "^3.2.0",
    "jest": "^30.2.0",
    "jest-util": "^30.2.0",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "files": [
    "lib",
    "*.d.ts"
  ],
  "engines": {
    "node": ">=18.17.0"
  },
  "keywords": [
    "web",
    "framework",
    "json",
    "openapi",
    "http",
    "rest",
    "restful",
    "router",
    "app",
    "api"
  ]
}
